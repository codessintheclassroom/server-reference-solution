{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Shelter/Shelter.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Shelter/Shelter.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "--project",
                "${workspaceFolder}/Shelter/Shelter.csproj",
                "run"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "--project",
                "${workspaceFolder}/Shelter.Tests/Shelter.Tests.csproj",
                "test"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}